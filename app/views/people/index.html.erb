<%= link_to 'Add new person', people_new_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @people.each do |person| %>
  <tr>
    <td><%= person.name %> </td>
    <td><%= person.age %></td>
    <td><%= link_to 'edit',people_edit_path(person) %></td>
    <td><%= link_to 'show', person_path(person) %></td>
    <td><%= link_to 'delete',person_destroy_path(person), method: :delete , data:{confirm: "are you sure"}%></td>
  </tr>
  <% end %>
</table>
